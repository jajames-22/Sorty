<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <!-- Folder Icon -->
        <ImageView
            android:id="@+id/folder_icon2"
            android:layout_width="127dp"
            android:layout_height="120dp"
            android:src="@drawable/rectangle_folder"
            app:layout_constraintBottom_toBottomOf="@+id/folder_icon1"
            app:layout_constraintStart_toStartOf="@+id/folder_icon1" />

        <!-- Note: If you don't have sorty_logo, use any drawable here -->

        <!-- Subject Name -->
        <ImageView
            android:id="@+id/folder_icon1"
            android:layout_width="0dp"
            android:layout_height="106dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/rectangle_folder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSubjectName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_bold"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="Mathematics"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/folder_icon1" />

        <!-- Description -->
        <TextView
            android:id="@+id/tvSubjectDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/poppins"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="Description"
            android:textColor="@color/dark_grey"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvSubjectName" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>