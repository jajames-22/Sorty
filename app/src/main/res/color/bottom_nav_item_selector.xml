<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Color to use when the item is selected (checked) -->
    <item android:color="@color/primary_green" android:state_checked="true" />

    <!-- Default color to use for unselected items -->
    <item android:color="@color/grey" android:state_checked="false"/>
</selector>