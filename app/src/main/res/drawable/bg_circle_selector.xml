<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State Checked: Circle with a Grey Border (The Highlight) -->
    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@android:color/white"/> <!-- This gets tinted by backgroundTint -->
            <stroke android:width="4dp" android:color="@color/dark_grey"/> <!-- Highlight Color -->
            <size android:width="40dp" android:height="40dp"/>
        </shape>
    </item>

    <!-- State Default: Plain Circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/white"/> <!-- This gets tinted by backgroundTint -->
            <size android:width="40dp" android:height="40dp"/>
        </shape>
    </item>
</selector>