<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/sorty_logo_rounded"
        android:label="@string/app_name"
        android:roundIcon="@drawable/sorty_logo_rounded"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sorty">

        <activity android:name=".ui.subjects.CourseActivity" />
        <activity
            android:name=".InsertPicture"
            android:exported="false" />
        <activity
            android:name="com.yalantis.ucrop.UCropActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Sorty.UCrop" />
        <activity
            android:name=".ui.home.addNotes"
            android:exported="false" />
        <activity
            android:name=".ui.home.Home"
            android:exported="true"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.Sorty" />
        <activity
            android:name=".CreateAccount"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true">

            <!-- THIS MAKES MAINACTIVITY THE DEFAULT STARTUP ACTIVITY -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>